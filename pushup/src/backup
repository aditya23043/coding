#include "Arduino.h"
#include "U8g2lib.h"
#include "string.h"

// U8G2_SSD1306_128X64_NONAME_F_HW_I2C u8g2(U8G2_R0, U8X8_PIN_NONE);
U8G2_SH1106_128X64_NONAME_1_HW_I2C u8g2(U8G2_R0, U8X8_PIN_NONE);

const char *txt = "FPGA/ASIC Development\nSomething\nC/C++\nPython";
char displayStr[20] = "";

int x_init = 5;
int y_init = 10;

int x = x_init;
int y = y_init;

int delta_y = 12;

char buffer[2] = "\0";

void setup() {
    u8g2.begin();
    u8g2.setFont(u8g2_font_likeminecraft_te);
}

void loop() {

    u8g2.clearBuffer();

    x = x_init;
    y = y_init;

    for (int i = 0; txt[i] != '\0'; i++) {

        if (txt[i] == '\n') {
            y += delta_y;
            x = x_init;
            continue;
        }

        buffer[0] = txt[i];
        u8g2.drawStr(x, y, buffer);
        x += u8g2.getStrWidth(buffer);
        x += 1;
        delay(30);
        u8g2.sendBuffer();
    }

    delay(1000);
}
